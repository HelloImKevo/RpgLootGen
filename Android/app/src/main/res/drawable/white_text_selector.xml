<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled -->
    <item android:state_enabled="false" android:color="@color/secondary_text"/>

    <!-- Pressed -->
    <item android:state_pressed="true" android:color="@color/tertiary_text"/>

    <!-- Selected -->
    <item android:state_selected="true" android:color="@color/tertiary_text"/>

    <!-- Default -->
    <item android:color="@android:color/white"/>

</selector>
