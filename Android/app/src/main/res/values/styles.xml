<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/button_blue_rounded</item>
        <item name="android:textColor">@drawable/white_text_selector</item>
    </style>

    <style name="Button.Red">
        <item name="android:background">@drawable/button_red_rounded</item>
        <item name="android:textColor">@drawable/white_text_selector</item>
    </style>

</resources>
